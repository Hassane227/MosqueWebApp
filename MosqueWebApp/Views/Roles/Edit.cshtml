@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Edit a Role";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";

}

<h2 class="mb-4 text-center text-success fw-bolder">Modifier un rôle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label for="name"> role</label>
        <input type="text" name="name" value="@Model.Name" class="form-control" />
        <span asp-validation-summary="All" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
