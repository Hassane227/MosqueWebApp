@model IEnumerable<MosqueWebApp.Models.Priere>

@{
    ViewData["Title"] = "Prayer Times";
    Layout = "~/Views/Shared/_Layout_Imam.cshtml";
}

<h2 class="text-center mb-4 text-success fw-bold">Prayer Times</h2>

<div class="card shadow-lg border-0 rounded-3 p-4">
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No prayer times have been added yet.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover align-middle">
            <thead class="table-success">
                <tr>
                    <th>Date</th>
                    <th>Fajr</th>
                    <th>Duhr</th>
                    <th>Asr</th>
                    <th>Maghrib</th>
                    <th>Isha</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                        <td>@item.HeureFajr?.ToString(@"hh\:mm")</td>
                        <td>@item.HeureDuhr?.ToString(@"hh\:mm")</td>
                        <td>@item.HeureAsr?.ToString(@"hh\:mm")</td>
                        <td>@item.HeureMaghrib?.ToString(@"hh\:mm")</td>
                        <td>@item.HeureIsha?.ToString(@"hh\:mm")</td>

                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm text-white" style="background-color:#00b894;">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure you want to delete this prayer time?');">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center mt-3">
        <a asp-action="Create" class="btn text-white" style="background-color:#00b894;">
            <i class="bi bi-plus-circle"></i> Add Prayer Times
        </a>
    </div>
</div>
