@model MosqueWebApp.Models.Priere

@{
    ViewData["Title"] = "Edit Prayer Times";
    Layout = "~/Views/Shared/_Layout_Imam.cshtml";
}

<h2 class="text-center mb-4 text-success fw-bold">Edit Prayer Times</h2>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit" class="card shadow-lg p-4 border-0 rounded-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Date" class="form-label fw-bold">Date</label>
                <input asp-for="Date" type="date" class="form-control border-success" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HeureFajr" class="form-label fw-bold">Fajr</label>
                <input asp-for="HeureFajr" type="time" class="form-control border-success" />
                <span asp-validation-for="HeureFajr" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HeureDuhr" class="form-label fw-bold">Duhr</label>
                <input asp-for="HeureDuhr" type="time" class="form-control border-success" />
                <span asp-validation-for="HeureDuhr" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HeureAsr" class="form-label fw-bold">Asr</label>
                <input asp-for="HeureAsr" type="time" class="form-control border-success" />
                <span asp-validation-for="HeureAsr" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HeureMaghrib" class="form-label fw-bold">Maghrib</label>
                <input asp-for="HeureMaghrib" type="time" class="form-control border-success" />
                <span asp-validation-for="HeureMaghrib" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HeureIsha" class="form-label fw-bold">Isha</label>
                <input asp-for="HeureIsha" type="time" class="form-control border-success" />
                <span asp-validation-for="HeureIsha" class="text-danger"></span>
            </div>

            <div class="text-center mt-3">
                <button type="submit" class="btn text-white px-4" style="background-color:#00b894;">Update</button>
                <a asp-action="Index" class="btn btn-secondary ms-2 px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}