@model IEnumerable<MosqueWebApp.Models.InscriptionEvenement>

@{
    ViewData["Title"] = "Event Participants";
    Layout = "~/Views/Shared/_Layout_Imam.cshtml";
}

<div class="container my-4">
    <h2 class="mb-4 text-center text-success fw-bolder">@ViewData["Title"]</h2>

    <!-- Back Button -->
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Evenement" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Events
        </a>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-success">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-muted">No participants registered for this event.</td>
                    </tr>
                }
                else
                {
                    @foreach (var participant in Model)
                    {
                        <tr>
                            <td>@participant.User.FullName</td>
                            <td>@participant.User.Email</td>
                            <td>
                                <form asp-action="Annuler" method="post" onsubmit="return confirm('Cancel this registration?');" style="display:inline;">
                                    <input type="hidden" name="id" value="@participant.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-times-circle"></i> Cancel
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
