@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container py-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <!-- Colonne plus étroite -->
        <div class="col-12 col-sm-10 col-md-6 col-lg-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
                <hr />
                <div class="form-floating mb-3">
                    <input asp-for="Input.FullName" class="form-control" autocomplete="FullName" aria-required="true" placeholder="Adamou Moussa Hassa" />
                    <label asp-for="Input.FullName">Nom Complet</label>
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mot de passe" />
                    <label asp-for="Input.Password">Mot de passe</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmer le mot de passe" />
                    <label asp-for="Input.ConfirmPassword">Confirmer le mot de passe</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>


                <div class="form-floating mb-4">
                    <select asp-for="Input.MosqueeId" class="form-select"
                            asp-items="@(new SelectList(Model.Mosquees, "Id", "Nom"))">
                        <option value="">-- Sélectionner une mosquée --</option>
                    </select>
                    <label asp-for="Input.MosqueeId">Mosquée</label>
                    <span asp-validation-for="Input.MosqueeId" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="btn btn-success w-100 btn-lg">S'inscrire</button>
            </form>

            <section class="mt-5">
                <h3 class="mb-3">S’inscrire avec un autre service</h3>
                <hr />
                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p>Aucun service externe disponible pour le moment.</p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex flex-column gap-2">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name" title="Se connecter avec @provider.DisplayName">@provider.DisplayName</button>
                        }
                    </form>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}